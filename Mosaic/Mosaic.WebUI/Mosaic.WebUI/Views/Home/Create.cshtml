@Html.EditorFor(model => model.IndexedLocation)
@Html.ValidationMessageFor(model => model.IndexedLocation)
<button id="update_indexed_location" class="btn">Update</button>

<table id="example" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>Selected</th>
            <th>FileName</th>
            <th>FilePath</th>
            <th>Date Modified</th>
            <th>Start date</th>
        </tr>
    </thead>
